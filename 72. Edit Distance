class Solution:
    def minDistance(self, word1: str, word2: str) -> int:
        n, m =  len(word1), len(word2)
        @cache
        # i => word1 , j => word2
        def dp(i, j):
            if j == m:
                return n - i

            if i == n:
                return m - j

            if word1[i] ==  word2[j]:
                return min(dp(i + 1, j + 1), 1 + dp(i, j + 1), 1 + dp(i + 1, j))

            return min(1 + dp(i + 1, j + 1), 1 + dp(i, j + 1), 1 + dp(i + 1, j))

        return dp(0, 0)
